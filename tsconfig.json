{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "out",
    "noLib": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "gruntfile.js",
    "grunt",
    "out",
    "node_modules",
    ".vscode",
    ".vscode-test"
  ]
}