{
  "compilerOptions": {
    "target": "ES2019",
    "module": "system",
    "outFile": "../out/extension-bundle.js",
    "lib": [
      "ES2019"
    ],
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "/*": [
        "/*"
      ],
      "core/*": [
        "core/*"
      ],
      "presentation/*": [
        "presentation/*"
      ],
      "providers/*": [
        "providers/*"
      ],
    },
  },
  "include": [
    "providers/**/activate.ts"
  ],
  "files": [
    "loader.js",
    "extension.ts"
  ]
}