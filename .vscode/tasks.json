{
  "version": "2.0.0",
  // we want to run npm
  "command": "npm",
  // the command is a shell script
  "type": "shell",
  "echoCommand": true,
  "args": [
    "run",
    "-s"
  ],
  "tasks": [
    {
      "label": "compile",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "clear": true,
      },
      "group": {
        "isDefault": true,
        "kind": "build",
      },
      "args": [
        "compile"
      ],
    },
    {
      "label": "compile:test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "clear": true,
      },
      "group": "build",
      "args": [
        "compile:test"
      ],
    },
    {
      "label": "test",
      "group": "test",
      "args": [
        "test"
      ],
    }
  ]
}